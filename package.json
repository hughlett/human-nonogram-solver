{
  "name": "@drewrh/human-nonogram-solver",
  "version": "1.0.0",
  "description": "A simple nonogram solver meant for solving human friendly puzzles",
  "keywords": [
    "nonogram",
    "picross",
    "paint-by-numbers",
    "hanjie",
    "griddlers"
  ],
  "homepage": "https://github.com/drewrh/human-nonogram-solver#readme",
  "bugs": "https://github.com/drewrh/human-nonogram-solver/issues",
  "license": "MIT",
  "author": "Drew Hughlett <drewrh04@gmail.com> (https://drewhughlett.com/)",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "main": "./lib/cjs/index.js",
  "repository": "github:drewrh/human-nonogram-solver",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm-run-all clean build:esm build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix-dry-run": "eslint --fix-dry-run .",
    "lint:fix": "eslint --fix .",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.33.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  }
}
